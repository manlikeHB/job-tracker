extends base 

block content 
    .nav-container
        p
            span.active-color JobTracker
        ul.nav-menu
            li.btn.btn-nav.nav-item
                a.nav-link(href="#") Add Job
            li.btn.btn-nav.nav-item
                a.nav-link(href="#") My Interviews
            li.btn.btn-nav.nav-item.center-div
                a(href="#", class="nav__el")
                    img.user-img(src="/img/default.jpg", alt="User photo")
                    |  &nbsp;
                span=user.firstName
        .hamburger
            span.bar
            span.bar
            span.bar
    #header
        h3 My Job Applications
        .search-div
            label(for="search")
                i.fa-solid.fa-magnifying-glass
            | &nbsp;
            input#search(type="search", name="search", placeholder="Search your jobs", required="required")
    hr
    section#content
        each job in jobs
            .card-overview-job
                .title.line
                    h4 Title:
                    | &nbsp;
                    p=job.title
                .position.line
                    h4 Postition:
                    | &nbsp;
                    p=job.position
                .company.line
                    h4 Company:
                    | &nbsp;
                    p=job.company
                .location.line
                    h4 location:
                    | &nbsp;
                    p=job.location
                .type.line
                    h4 type:
                    | &nbsp;
                    p=job.type
                .details.action-btn-two
                    p Details 